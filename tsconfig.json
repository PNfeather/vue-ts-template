{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "element-ui/types",
      "vuex/types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@img/*": [
        "src/assets/image/*"
      ],
      "@css/*": [
        "src/assets/style/*"
      ],
      "@com/*": [
        "src/components/*"
      ],
      "@sys/*": [
        "src/systemConfig/*"
      ],
      "@api": [
        "src/api/index"
      ]
    },
    "lib": [
      "esnext",
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "./typings/images.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
